<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Management" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Content="Показать машины" Click="ShowCars_Click"/>
            <ListBox x:Name="carListBox"/>
            <Label Content="Введите марку машины:"/>
            <TextBox x:Name="brandTextBox"/>
            <Label Content="Введите новую цену:"/>
            <TextBox x:Name="priceTextBox"/>
            <Button Content="Обновить цену" Click="UpdatePrice_Click"/>
        </StackPanel>
    </Grid>
</Window>
